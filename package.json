{
  "name": "vscode-intelephect",
  "displayName": "Ephect Syntax Highlighting",
  "description": "Syntax highlighting for Ephect framework templates with HTML HEREDOC and simplified PHP syntax",
  "version": "0.2.15",
  "publisher": "ephect-io",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "ephect",
    "php",
    "html",
    "heredoc",
    "syntax",
    "highlighting",
    "template"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "php",
        "scopeName": "source.php.ephect",
        "path": "./syntaxes/ephect-php.tmLanguage.json",
        "injectTo": [
          "source.php"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ephect Syntax Highlighting",
      "properties": {
        "ephect.enableIntelephenseCompatibility": {
          "type": "boolean",
          "default": true,
          "description": "Enable compatibility mode with Intelephense PHP language server"
        }
      }
    },
    "themes": [
      {
        "label": "Ephect Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/ephect-dark-color-theme.json"
      }
    ]
  },
  "extensionPack": [],
  "extensionDependencies": [],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "standard-version",
    "prepare": "husky install",
    "test:commit": "commitlint --from HEAD~1 --to HEAD --verbose",
    "package": "vsce package",
    "publish": "vsce publish",
    "publish:patch": "vsce publish patch",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major",
    "publish:token": "vsce publish --pat $VSCE_PAT"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ephect-io/vscode-intelephect.git"
  },
  "homepage": "https://github.com/ephect-io/vscode-intelephect#readme",
  "bugs": {
    "url": "https://github.com/ephect-io/vscode-intelephect/issues"
  },
  "icon": "assets/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "license": "MIT"
}
