{
  "name": "ephect-syntax-highlighting",
  "displayName": "Ephect Syntax Highlighting",
  "description": "Syntax highlighting for Ephect framework templates with HTML HEREDOC and simplified PHP syntax",
  "version": "0.1.2",
  "publisher": "ephect-io",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "ephect",
    "php",
    "html",
    "heredoc",
    "syntax",
    "highlighting",
    "template"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "php",
        "scopeName": "source.php.ephect",
        "path": "./syntaxes/ephect-php.tmLanguage.json",
        "injectTo": [
          "source.php"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ephect Syntax Highlighting",
      "properties": {
        "ephect.enableIntelephenseCompatibility": {
          "type": "boolean",
          "default": true,
          "description": "Enable compatibility mode with Intelephense PHP language server"
        }
      }
    },
    "themes": [
      {
        "label": "Ephect Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/ephect-dark-color-theme.json"
      }
    ]
  },
  "extensionPack": [],
  "extensionDependencies": [],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "standard-version",
    "prepare": "husky install",
    "test:commit": "commitlint --from HEAD~1 --to HEAD --verbose"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "standard-version": "^9.5.0",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ephect-io/vscode-extension.git"
  },
  "license": "MIT"
}
