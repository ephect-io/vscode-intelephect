{
  "name": "ephect-syntax-highlighting",
  "displayName": "Ephect Syntax Highlighting",
  "description": "Syntax highlighting for Ephect framework templates with HTML HEREDOC and simplified PHP syntax",
  "version": "0.1.2",
  "publisher": "ephect-io",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Themes"
  ],
  "keywords": [
    "ephect",
    "php",
    "html",
    "heredoc",
    "syntax",
    "highlighting",
    "template"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "language": "php",
        "scopeName": "source.php.ephect",
        "path": "./syntaxes/ephect-php.tmLanguage.json",
        "injectTo": [
          "source.php"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Ephect Syntax Highlighting",
      "properties": {
        "ephect.enableIntelephenseCompatibility": {
          "type": "boolean",
          "default": true,
          "description": "Enable compatibility mode with Intelephense PHP language server"
        }
      }
    },
    "themes": [
      {
        "label": "Ephect Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/ephect-dark-color-theme.json"
      }
    ]
  },
  "extensionPack": [],
  "extensionDependencies": [],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ephect-io/vscode-extension.git"
  },
  "license": "MIT"
}