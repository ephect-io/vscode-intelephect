{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "wordPattern": "(@[a-zA-Z_]+|%[a-zA-Z_][a-zA-Z0-9_]*|\\$[a-zA-Z_][a-zA-Z0-9_]*)",
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["{{", "}}"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "{{", "close": "}}" },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["{{", "}}"],
    ["'", "'"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*//\\s*#?region\\b",
      "end": "^\\s*//\\s*#?endregion\\b"
    }
  },
  "onEnterRules": [
    {
      "beforeText": ".*do\\s*$",
      "action": { "indentAction": "indent" }
    },
    {
      "beforeText": ".*@done\\s*$",
      "action": { "indentAction": "outdent" }
    }
  ]
}
