{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ephect PHP Injection",
  "scopeName": "source.php.ephect",
  "injectionSelector": "L:source.php",
  "patterns": [
    {
      "include": "#ephect-features"
    }
  ],
  "repository": {
    "ephect-features": {
      "patterns": [
        {
          "include": "#heredoc-html"
        },
        {
          "include": "#ephect-template-syntax"
        }
      ]
    },
    "heredoc-html": {
      "patterns": [
        {
          "name": "string.quoted.heredoc.html.php",
          "begin": "(<<<)\\s*(HTML)\\s*$",
          "beginCaptures": {
            "1": {
              "name": "keyword.operator.heredoc.php"
            },
            "2": {
              "name": "keyword.operator.heredoc.php"
            }
          },
          "end": "^\\s*(HTML)\\s*",
          "endCaptures": {
            "1": {
              "name": "keyword.operator.heredoc.php"
            }
          },
          "patterns": [
            {
              "include": "#ephect-template-directives"
            },
            {
              "include": "#ephect-variable-interpolation"
            },
            {
              "include": "#html-content"
            }
          ]
        }
      ]
    },
    "ephect-template-directives": {
      "patterns": [
        {
          "name": "meta.ephect.directive.for",
          "begin": "^\\s*(@for)\\s+",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "end": "\\s+(do)\\s*$",
          "endCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "patterns": [
            {
              "include": "#ephect-variables"
            },
            {
              "name": "keyword.operator.ephect",
              "match": "\\b(as)\\b"
            }
          ]
        },
        {
          "name": "meta.ephect.directive.while",
          "begin": "^\\s*(@while)\\s+",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "end": "\\s+(do)\\s*$",
          "endCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "patterns": [
            {
              "include": "#ephect-variables"
            },
            {
              "include": "#php-operators"
            }
          ]
        },
        {
          "name": "meta.ephect.directive.if",
          "begin": "^\\s*(@if)\\s+",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "end": "\\s+(do)\\s*$",
          "endCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "patterns": [
            {
              "include": "#ephect-variables"
            },
            {
              "include": "#php-operators"
            }
          ]
        },
        {
          "name": "meta.ephect.directive.elseif",
          "begin": "^\\s*(@elseif)\\s+",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "end": "\\s+(do)\\s*$",
          "endCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "patterns": [
            {
              "include": "#ephect-variables"
            },
            {
              "include": "#php-operators"
            }
          ]
        },
        {
          "name": "meta.ephect.directive.op",
          "begin": "^\\s*(@op)\\s+",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "end": "$",
          "patterns": [
            {
              "include": "#php-standard"
            }
          ]
        },
        {
          "name": "keyword.control.ephect",
          "match": "^\\s*(@done|@else|@do)\\s*$"
        }
      ]
    },
    "ephect-variable-interpolation": {
      "patterns": [
        {
          "name": "meta.ephect.interpolation",
          "begin": "{{\\s*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.template-expression.begin.ephect"
            }
          },
          "end": "\\s*}}",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.template-expression.end.ephect"
            }
          },
          "patterns": [
            {
              "include": "#ephect-variables"
            },
            {
              "include": "#php-operators"
            }
          ]
        }
      ]
    },
    "ephect-variables": {
      "patterns": [
        {
          "name": "variable.other.ephect",
          "match": "(%[a-zA-Z_][a-zA-Z0-9_]*(?:->[a-zA-Z_][a-zA-Z0-9_]*)*)"
        },
        {
          "name": "variable.other.php",
          "match": "(\\$[a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "php-operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.php",
          "match": "(!=|==|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.php",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.php",
          "match": "(=)"
        }
      ]
    },
    "html-content": {
      "patterns": [
        {
          "name": "meta.tag.html",
          "begin": "(<)([a-zA-Z][a-zA-Z0-9]*)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "end": "(>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          },
          "patterns": [
            {
              "include": "#html-attributes"
            }
          ]
        },
        {
          "name": "meta.tag.html",
          "begin": "(</)([a-zA-Z][a-zA-Z0-9]*)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "end": "(>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          }
        }
      ]
    },
    "html-attributes": {
      "patterns": [
        {
          "name": "meta.attribute.html",
          "match": "([a-zA-Z-]+)(=)(\"[^\"]*\"|'[^']*'|[^\\s>]+)",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.html"
            },
            "2": {
              "name": "punctuation.separator.key-value.html"
            },
            "3": {
              "name": "string.quoted.html"
            }
          }
        }
      ]
    },
    "ephect-template-syntax": {
      "patterns": [
        {
          "include": "#ephect-template-directives"
        },
        {
          "include": "#ephect-variable-interpolation"
        }
      ]
    }
  }
}