{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Ephect PHP",
  "scopeName": "source.php.ephect",
  "fileTypes": ["php"],
  "patterns": [
    {
      "include": "#php-code"
    }
  ],
  "repository": {
    "php-code": {
      "patterns": [
        {
          "include": "#php-tags"
        },
        {
          "include": "#heredoc-html"
        },
        {
          "include": "#ephect-template-syntax"
        },
        {
          "include": "#php-standard"
        }
      ]
    },
    "php-tags": {
      "patterns": [
        {
          "name": "meta.embedded.line.php",
          "begin": "(<\\?)(php|=)?",
          "beginCaptures": {
            "1": {
              "name": "punctuation.section.embedded.begin.php"
            },
            "2": {
              "name": "keyword.other.php"
            }
          },
          "end": "(\\?>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.section.embedded.end.php"
            }
          },
          "patterns": [
            {
              "include": "#heredoc-html"
            },
            {
              "include": "#ephect-template-syntax"
            },
            {
              "include": "#php-standard"
            }
          ]
        }
      ]
    },
    "heredoc-html": {
      "patterns": [
        {
          "name": "string.quoted.heredoc.html.php",
          "begin": "(<<<)\\s*(HTML)\\s*$",
          "beginCaptures": {
            "1": {
              "name": "keyword.operator.heredoc.php"
            },
            "2": {
              "name": "keyword.operator.heredoc.php"
            }
          },
          "end": "^\\s*(HTML)\\s*",
          "endCaptures": {
            "1": {
              "name": "keyword.operator.heredoc.php"
            }
          },
          "patterns": [
            {
              "include": "#ephect-template-directives"
            },
            {
              "include": "#ephect-variable-interpolation"
            },
            {
              "include": "#html-content"
            }
          ]
        }
      ]
    },
    "ephect-template-directives": {
      "patterns": [
        {
          "name": "meta.ephect.directive.for",
          "begin": "^\\s*(@for)\\s+",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "end": "\\s+(do)\\s*$",
          "endCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "patterns": [
            {
              "include": "#ephect-variables"
            },
            {
              "name": "keyword.operator.ephect",
              "match": "\\b(as)\\b"
            }
          ]
        },
        {
          "name": "meta.ephect.directive.if",
          "begin": "^\\s*(@if)\\s+",
          "beginCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "end": "\\s+(do)\\s*$",
          "endCaptures": {
            "1": {
              "name": "keyword.control.ephect"
            }
          },
          "patterns": [
            {
              "include": "#ephect-variables"
            },
            {
              "include": "#php-operators"
            }
          ]
        },
        {
          "name": "keyword.control.ephect",
          "match": "^\\s*(@done|@else)\\s*$"
        }
      ]
    },
    "ephect-variable-interpolation": {
      "patterns": [
        {
          "name": "meta.ephect.interpolation",
          "begin": "{{\\s*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.template-expression.begin.ephect"
            }
          },
          "end": "\\s*}}",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.template-expression.end.ephect"
            }
          },
          "patterns": [
            {
              "include": "#ephect-variables"
            },
            {
              "include": "#php-operators"
            }
          ]
        }
      ]
    },
    "ephect-variables": {
      "patterns": [
        {
          "name": "variable.other.ephect",
          "match": "(%[a-zA-Z_][a-zA-Z0-9_]*(?:->[a-zA-Z_][a-zA-Z0-9_]*)*)"
        },
        {
          "name": "variable.other.php",
          "match": "(\\$[a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "php-operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.php",
          "match": "(!=|==|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.php",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.assignment.php",
          "match": "(=)"
        }
      ]
    },
    "html-content": {
      "patterns": [
        {
          "name": "meta.tag.html",
          "begin": "(<)([a-zA-Z][a-zA-Z0-9]*)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "end": "(>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          },
          "patterns": [
            {
              "include": "#html-attributes"
            }
          ]
        },
        {
          "name": "meta.tag.html",
          "begin": "(</)([a-zA-Z][a-zA-Z0-9]*)",
          "beginCaptures": {
            "1": {
              "name": "punctuation.definition.tag.begin.html"
            },
            "2": {
              "name": "entity.name.tag.html"
            }
          },
          "end": "(>)",
          "endCaptures": {
            "1": {
              "name": "punctuation.definition.tag.end.html"
            }
          }
        }
      ]
    },
    "html-attributes": {
      "patterns": [
        {
          "name": "meta.attribute.html",
          "match": "([a-zA-Z-]+)(=)(\"[^\"]*\"|'[^']*'|[^\\s>]+)",
          "captures": {
            "1": {
              "name": "entity.other.attribute-name.html"
            },
            "2": {
              "name": "punctuation.separator.key-value.html"
            },
            "3": {
              "name": "string.quoted.html"
            }
          }
        }
      ]
    },
    "ephect-template-syntax": {
      "patterns": [
        {
          "include": "#ephect-template-directives"
        },
        {
          "include": "#ephect-variable-interpolation"
        }
      ]
    },
    "php-standard": {
      "patterns": [
        {
          "name": "keyword.control.php",
          "match": "\\b(if|else|elseif|endif|while|endwhile|for|endfor|foreach|endforeach|do|switch|endswitch|case|default|break|continue|return|try|catch|finally|throw|goto)\\b"
        },
        {
          "name": "keyword.other.php",
          "match": "\\b(function|class|interface|trait|extends|implements|abstract|final|private|protected|public|static|const|var|global|namespace|use|as|new|clone|instanceof)\\b"
        },
        {
          "name": "support.function.php",
          "match": "\\b(echo|print|isset|empty|unset|die|exit|include|require|include_once|require_once)\\b"
        },
        {
          "name": "variable.other.php",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "name": "string.quoted.double.php",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.php",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.php",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.php",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "comment.line.double-slash.php",
          "match": "//.*$"
        },
        {
          "name": "comment.block.php",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    }
  }
}